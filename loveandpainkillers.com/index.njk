	</section> #}

	<section>
		<ol>
			{% for track in tracks %}
				{% set trackCompletion = getTrackCompletion(track.statuses) %}

				<li class="trackItem" data-statuses="{{ track.statuses }}" data-completion="{{ trackCompletion }}">
					<span class="completion"></span>
					<span class="trackName">{{ track.name }}</span>
					<span class="trackProgress">{{ trackCompletion }}%</span></li>
				</li>
			{% endfor %}
		</ol>
	</section>

	<section>
		{% set overallCompletion = getOverallCompletion(tracks) %}
		<p class="overallProgress"><big>Overall progress: <span class="overallPercentage">{{ overallCompletion }}%</span></big></p>
	</section>

	<footer>
		{% for update in updates %}
			{% if loop.first %}
				<p class="last">Latest update:</p>
				<ul class="updates">
					<li><strong>{{update.date}}</strong>: {{update.text | safe}}</li>
				</ul>
				<details>
					<summary>Previous updates:</summary>
					<ul class="updates">
			{% else %}
				<li><strong>{{update.date}}</strong>: {{update.text | safe}}</li>
			{% endif %}
		{% endfor %}
			</ul>
		</details>

		<p><small>&copy; <a href="https://clivemurray.com/">Clive Murray</a></small></p>
	</footer>

</main>

