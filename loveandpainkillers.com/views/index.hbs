{{#*inline "trackItem"}}
<li class="trackItem{{#if (eq this.completion 100)}} complete{{/if}}" data-statuses="{{this.statuses}}" data-completion="{{this.completion}}">
	<span class="completion"></span>
	<span class="trackName">{{this.name}}</span>
	<span class="trackProgress">{{this.completion}}%</span></li>
{{/inline}}

<main>

	<header>
		<h1>{{{title}}}</h1>
		<p>How much progress has Clive made on his second album?</p>
		<p class="js-only"><small><em>(Click the song titles for more detail...)</em></small></p>
	</header>

	<section>
		{{!-- <h2>Definites</h2> --}}
		<ol>
			{{#each definites}}
				{{> trackItem}}
			{{/each}}
		</ol>
	</section>

{{!--
	{{#if possibles}}
	<section>
		<h2>Candidates</h2>
		<ul>
			{{#each possibles}}
				{{> trackItem}}
			{{/each}}
		</ul>
	</section>
	{{/if}}
 --}}

	<section>
		<p class="overallProgress"><big>Overall progress: <span class="overallPercentage">{{overall}}%</span></big></p>
	</section>

	<footer>
		{{#each updates}}
			{{#if @first}}
				<p class="last">Latest update:</p>
				<ul class="updates">
					<li><strong>{{this.date}}</strong>: {{this.text}}</li>
				</ul>
				<details>
					<summary>Previous updates:</summary>
					<ul class="updates">
				{{else}}
					<li><strong>{{this.date}}</strong>: {{this.text}}</li>
				{{/if}}
			{{/each}}
			</ul>
		</details>

		<p><small>&copy; <a href="https://clivemurray.com/">Clive Murray</a></small></p>
	</footer>

</main>

